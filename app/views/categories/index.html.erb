<h1 align="center">You're categories</h1>


<div align="center">
<% @categories.each do |category| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li><%= link_to "#{category.name}", category_path(category) %></li>
                
                <% if logged_in? and current_user.admin? %>
                <li><%= link_to "Delete this category", category_path(category), method: :delete, 
                    data: { confirm: "Are you sure? "}%>
                </li>
                <% end %>  
            </div>
        </div>
    </ul>
<% end %>
<%= will_paginate %>
</div>