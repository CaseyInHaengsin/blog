
<h1>Showing selected article</h1>
<div class="container">
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Title: <%= @article.title %> </h5>
        <p class="card-text">Description: <%= @article.description %></p>
    </div>
</div>
</div>

<%= link_to 'Back', articles_path, class: "btn btn-secondary", id: 'addpadding' %>
<%= link_to 'Edit', edit_article_path(@article), class: "btn btn-secondary", id: 'addpadding' %>